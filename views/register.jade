extends layout

block content

    .w3-light-grey
        header.w3-container.w3-theme-d4.w3-text-white.w3-margin-bottom
            h1 Registar
        form.w3-container.w3-padding-large(action='/register' method='POST')

            h5.w3-cell-row.w3-padding
                label.w3-cell(style="width:100px") Username:
                input.w3-input.w3-margin-left.w3-round.w3-cell(style="width:700px" type="text" name="username" value=`${user}` placeholder=`Introduza o seu username` required)
            h5.w3-cell-row.w3-padding
                label.w3-cell(style="width:100px") Email:
                input.w3-input.w3-margin-left.w3-round(style="width:700px" type="text" name="email" value=`${email}` placeholder=`Introduza o seu email` required)
    
            h5.w3-cell-row.w3-padding
                input.w3-btn.w3-blue-grey.w3-round(type="submit" value="Enviar")
                if error
                    span.w3-padding.w3-cell-middle.w3-opacity - Username j√° existe -
        
        .w3-container.w3-theme-d4.w3-text-white.w3-padding.w3-margin-top.w3-padding-large
            address 
                a(href="/") Voltar